<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="21"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_td_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorHighLightBackground"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="src_over"
            android:paddingStart="@dimen/mr_cast_group_volume_seekbar_height"
            android:paddingEnd="@dimen/mr_cast_group_volume_seekbar_height"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_td_aU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/tv_td_aB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/tv_td_uAm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:textAlignment="textEnd" />

    <ImageButton
        android:id="@+id/ib_td_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="24"
        android:contentDescription="@string/edit"
        android:tint="?attr/colorControlNormal"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp" />
</LinearLayout>