<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorHighLightBackground"
            android:backgroundTint="#00FFFFFF"
            android:backgroundTintMode="src_over"
            android:paddingStart="@dimen/mr_cast_group_volume_seekbar_height"
            android:paddingEnd="@dimen/mr_cast_group_volume_seekbar_height" />
    </LinearLayout>

    <TextView
        android:id="@+id/tsAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15" />

    <TextView
        android:id="@+id/tsAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/tsTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:text="@string/calculating"
        android:textAlignment="textEnd" />

    <ImageButton
        android:id="@+id/bt_ts_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="17"
        android:contentDescription="@string/edit"
        android:tint="?attr/colorControlNormal"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp" />
</LinearLayout>